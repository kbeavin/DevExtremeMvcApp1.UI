    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>DevExtremeMvcApp1_UI</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @* Uncomment to use the HtmlEditor control *@
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.min.js"></script> *@

    @Styles.Render("~/Content/bundle")
    @Styles.Render("~/Content/DevExtremeBundle")
    @Scripts.Render("~/Scripts/bundle")
    @Scripts.Render("~/Scripts/DevExtremeBundle")
    <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/19.2.5/js/vectormap-data/world.js"></script>
    <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/19.2.5/js/vectormap-data/africa.js"></script>
    <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/19.2.5/js/vectormap-data/canada.js"></script>

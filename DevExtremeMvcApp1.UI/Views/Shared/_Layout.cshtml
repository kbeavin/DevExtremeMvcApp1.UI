</head>

<body style="padding-top: 5rem;">

    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <a class="navbar-brand" href="/">DevExtremeMvcApp1_UI</a>

        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbar" class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "") nav-item"><a href="/" class="nav-link">Home</a></li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "MileageReport" ? "active" : "") nav-item"><a href="/Home/MileageReport" class="nav-link">MileageReport</a></li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Orders" ? "active" : "") nav-item"><a href="/Home/Orders" class="nav-link">Orders</a></li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>

    @Html.Partial("_Footer")
</body>

</html>